---
import subscription from "@config/subscription.json";
import { settings, social} from "@config/site.config.json";
import { footerMenu } from "@config/menus.json";
---

<footer class="mt-auto">
  <div class="container">
    <div class="section">
      <div class="row justify-center">
        <div class="xl:col-5 lg:col-6 md:col-8 sm:col-10">
          <!-- START :: Newsletter block -->
          <svg class="mx-auto -mb-[95px] md:-mb-[100px] lg:-mb-[110px] text-primary dark:text-[#1f2531] h-32 w-32 scale-150 md:scale-[2] opacity-5 dark:opacity-40 pointer-events-none" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 17a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V9.5C2 7 4 5 6.5 5H18c2.2 0 4 1.8 4 4v8Z"/><polyline points="15,9 18,9 18,11"/><path d="M6.5 5C9 5 11 7 11 9.5V17a2 2 0 0 1-2 2v0"/><line x1="6" x2="7" y1="10" y2="10"/></svg>

          <h2 class="section-title text-center mb-10 text-balance">
            {subscription?.title}
          </h2>
          <form
            method="post"
            action={subscription?.mailChimpFormAction}
            id="mc-embedded-subscribe-form"
            name="mc-embedded-subscribe-form"
            target="_blank"
            class="flex items-start flex-col sm:flex-row gap-4 sm:gap-5 px-[10%] sm:px-0"
          >
            <input
              class="peer bg-transparent border border-gray/30 dark:border-[#3c4352] text-dark dark:text-white focus:ring-0 outline-none rounded-md transition-all duration-200 px-4 py-3 w-full text-center sm:text-start focus:border-primary"
              type="email"
              name="EMAIL"
              placeholder={subscription?.formPlaceholder}
              aria-label="Subscription" required
            />
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name={subscription?.mailChimpFormName} tabindex="-1" value=""></div>
            <button
              type="submit"
              name="subscribe"
              class="btn btn-outline-primary flex items-center justify-center gap-x-3 flex-shrink-0 w-full sm:w-auto peer-focus:bg-primary dark:peer-focus:bg-primary-dark peer-focus:text-white peer-focus:border-primary dark:peer-focus:border-primary-dark"
              aria-label="Subscription Button"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentcolor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M8 7a4 4 0 108 0A4 4 0 008 7"></path><path d="M16 19h6"></path><path d="M19 16v6"></path><path d="M6 21v-2a4 4 0 014-4h4"></path></svg>
              {subscription?.formButtonLabel}
            </button>
          </form>
          <!-- END :: Newsletter block -->
        </div>
      </div>
    </div>
    <div class="flex flex-col-reverse sm:flex-row justify-between items-center pb-12 gap-3">
      <p class="font-medium text-dark/70 dark:text-white/90">{settings?.copyright}</p>
      <ul class="flex flex-wrap items-center justify-center sm:justify-end divide-x-2 divide-dark/30 dark:divide-white/40 leading-none gap-x-5">
        {footerMenu.map((menu) => (
          <li>
            <a 
              class="text-dark/70 dark:text-white/90 hover:text-primary dark:text-primary-dark hover:underline transition-all duration-150 font-medium ml-5 flex items-center gap-x-2"
              href={menu.link}
              target={menu.target ?? ''}
              rel={menu.rel ?? ''}
            >
              {menu.link == '/rss.xml' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-rss"><path d="M4 11a9 9 0 0 1 9 9"/><path d="M4 4a16 16 0 0 1 16 16"/><circle cx="5" cy="19" r="1"/></svg>
              )}
              {menu.name}
            </a>
          </li>
        ))}
        <br>
        {social.enable && (
              <div class="flex gap-3 mt-5 pr-2">
    
     
                {social.linkedin && (
                  <a
                    class="h-10 w-10 rounded-clip grid place-content-center text-black/60 bg-black/10 dark:bg-white/10 hover:bg-primary dark:hover:bg-primary-dark hover:text-white transition-all relative z-10 after:content-[''] after:h-full after:w-full after:bg-body dark:after:bg-body-dark after:-z-10 after:absolute after:scale-95 after:rounded-clip after:transition-all hover:after:opacity-0"
                    href={social.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
